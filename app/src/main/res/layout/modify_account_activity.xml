<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:textSize="14pt"
        android:gravity="center"
        android:id="@+id/text_view_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/edit_credentials" />

    <EditText
        android:paddingTop="25dp"
        android:id="@+id/new_username_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/new_username_hint"
        android:inputType="text"/>

    <EditText
        android:paddingTop="25dp"
        android:id="@+id/new_email_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/new_email_hint"
        android:inputType="text"/>

    <EditText
        android:paddingTop="25dp"
        android:id="@+id/new_name_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/new_name_hint"
        android:inputType="text"/>

    <EditText
        android:paddingTop="25dp"
        android:id="@+id/new_password_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/new_password_hint"
        android:inputType="text"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/savebutton"
        />

</LinearLayout>