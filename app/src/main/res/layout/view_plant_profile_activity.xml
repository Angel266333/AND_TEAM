<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plant_name"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_temperature"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humid_level"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/co2_level"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <Button
            android:id="@+id/modify_plant_profile"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/modify_plant_profile" />
        <Button
            android:id="@+id/water_plant"
            android:paddingTop="40dp"
            android:layout_below="@+id/modify_plant_profile"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/water_plant" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/delete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="#FFA07A"
            android:src="@drawable/ic_delete_black_24dp"/>

    </RelativeLayout>





</LinearLayout>