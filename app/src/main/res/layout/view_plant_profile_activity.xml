<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plant_name"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_temperature"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humid_level"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/co2_level"
        android:layout_marginLeft="15dp"
        android:textSize="11pt"
        />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <Button
            android:id="@+id/modify_plant_profile"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/modify_plant_profile" />
        <Button
            android:id="@+id/water_plant"
            android:paddingTop="40dp"
            android:layout_below="@+id/modify_plant_profile"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/water_plant" />

        <ImageView
            android:id="@+id/delete_profile_button"
            android:layout_below="@id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="290dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:src="@drawable/deleteProfileButton"
            />

    </RelativeLayout>





</LinearLayout>